{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./server/*"]
    },
    "target": "ESNext",
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "types": ["node"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
